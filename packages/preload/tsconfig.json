{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@c/*": ["../common/*"]
    }
  },
  "include": ["src/**/*.ts", "../../*.d.ts"]
}
